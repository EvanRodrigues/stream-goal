    "license": "ISC",
    "bugs": {
        "url": "https://github.com/EvanRodrigues/stream-goal/issues"
    },
    "homepage": "https://github.com/EvanRodrigues/stream-goal#readme",
    "devDependencies": {
        "nodemon": "^2.0.2"
    },
    "dependencies": {
        "concurrently": "^5.1.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "mongoose": "^5.9.7",
        "socket.io": "^2.3.0",
        "socket.io-client": "^2.3.0",
        "ws": "^7.2.3"
    }
}
